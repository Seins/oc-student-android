<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#413F44"
    android:id="@+id/menuLy"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_overlay"
        android:paddingTop="15dp"
    >
        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginBottom="5px"
            android:layout_centerHorizontal="true"
            android:id="@+id/menu_user_icon"
            android:src="@drawable/icon_user"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_below="@+id/menu_user_icon"
            android:id="@+id/menu_user_name"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_user_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:layout_below="@+id/menu_user_name"
            android:id="@+id/menu_account_no"
            android:layout_centerHorizontal="true"
            android:text="@string/menu_user_account"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="fill_parent"
        android:id="@+id/menu_main_list"
        android:divider="#5A575E"
        android:dividerHeight="2px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        android:paddingTop="10dp"
        android:listSelector="@color/black_transparent"
    >
    </ListView>
</LinearLayout>

